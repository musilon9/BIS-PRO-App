<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#c0c0c0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/placeholderString"
        android:textColor="#33b5e5"
        android:id="@+id/title_blockFour" />

    <!-- FOUR TextViews in the same line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/placeholderString"
            android:layout_gravity="center_horizontal"
            android:id="@+id/label_blockFour_1A" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/placeholderString"
            android:layout_gravity="center_horizontal"
            android:id="@+id/info_blockFour_1A" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/placeholderString"
            android:layout_gravity="center_horizontal"
            android:id="@+id/label_blockFour_1B" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/placeholderString"
            android:layout_gravity="center_horizontal"
            android:id="@+id/info_blockFour_1B" />

    </LinearLayout>

    <!-- FOUR TextViews in the same line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/placeholderString"
            android:layout_gravity="center_horizontal"
            android:id="@+id/label_blockFour_2A" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/placeholderString"
            android:layout_gravity="center_horizontal"
            android:id="@+id/info_blockFour_2A" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/placeholderString"
            android:layout_gravity="center_horizontal"
            android:id="@+id/label_blockFour_2B" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/placeholderString"
            android:layout_gravity="center_horizontal"
            android:id="@+id/info_blockFour_2B" />

    </LinearLayout>

</LinearLayout>